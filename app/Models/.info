CREATE TABLE packages (
    packets_id INT AUTO_INCREMENT PRIMARY KEY,
    packets_name VARCHAR(255) NOT NULL,
    packets_description TEXT,
    packets_price DECIMAL(15, 2) NOT NULL,
    packets_features INT,
    packets_responsive BOOLEAN,
    packets_hosting BOOLEAN,
    packets_domain BOOLEAN,
    packets_ssl BOOLEAN,
    packets_auth BOOLEAN,
    packets_root BOOLEAN,
    packets_crud INT,
    packets_uiux INT,
    packets_statistic BOOLEAN,
    packets_api BOOLEAN,
    packets_logo BOOLEAN,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    updated_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP
);
